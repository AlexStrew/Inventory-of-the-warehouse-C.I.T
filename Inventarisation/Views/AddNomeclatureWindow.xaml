<Window
    x:Class="Inventarisation.Views.AddNomeclatureWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Inventarisation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="400"
    Height="150"
    mc:Ignorable="d">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="10,0,0,30"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="16"
            FontWeight="Light">
            Название устройства
        </TextBlock>
        <TextBox
            x:Name="NameDeviceTBox"
            Width="auto"
            Margin="10,0,10,0"
            VerticalAlignment="Bottom" />

        <Grid
            Grid.Row="1"
            Height="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Button
                x:Name="AddNomenBtn"
                Width="100"
                Margin="0,0,5,5"
                Click="AddNomenBtnClick">
                Добавить
            </Button>
        </Grid>

    </Grid>
</Window>
