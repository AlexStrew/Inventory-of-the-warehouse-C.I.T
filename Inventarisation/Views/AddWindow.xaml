<Window x:Class="Inventarisation.Views.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventarisation.Views"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.VisualStyle="MaterialDark"
        mc:Ignorable="d"
        Title="AddWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Margin="5 5 0 0">Наименование</TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="5 35 0 0">Организация</TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="5 65 0 0">Номер заявки на оплату</TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="5 95 0 0">Комментарии</TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="5 125 0 0">Накладная</TextBlock>
            <Grid Grid.Column="1">

                <StackPanel Grid.Column="1" Width="auto" Margin="0  5 5 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Width="130" Margin="0 0 5 0" ></TextBox>
                        <Button x:Name="SelectNumButton" Click="SelectNumButton_Click" HorizontalAlignment="Right" Width="50">...</Button>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Width="auto" Margin="0 35 5 0">
                    <ComboBox x:Name="CompanyNameCB" Width="auto"></ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Width="auto" Margin="0 65 5 0">
                    <TextBox Width="auto" ></TextBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Width="auto" Margin="0 95 5 0">
                    <TextBox Width="auto" ></TextBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Width="auto" Margin="0 125 5 0">
                    <TextBox Width="auto" ></TextBox>
                </StackPanel>
            </Grid>
        </Grid>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Grid Margin="5 0 5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" HorizontalAlignment="Center">Дата</TextBlock>
                <TextBlock Grid.Column="1" HorizontalAlignment="Center">Размещение</TextBlock>
                <TextBlock Grid.Column="2" HorizontalAlignment="Center">План</TextBlock>
                <DatePicker   Grid.Row="1" Margin="0 0 5 0"></DatePicker>
                <TextBox Grid.Column="1" Grid.Row="1" Margin="5 0 5 0"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="1" Margin="5 0 0 0"></TextBox>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,60,0,0">
            <Grid Margin="5 0 5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" HorizontalAlignment="Center">Тип</TextBlock>
                <TextBlock Grid.Column="1" HorizontalAlignment="Center">Наименование</TextBlock>
                <TextBlock Grid.Column="2" HorizontalAlignment="Center">Размещение</TextBlock>
                <TextBox  Grid.Row="1" Margin="0 0 5 0"></TextBox>
                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
                    <TextBox Width="60" Margin="5 0 5 0"></TextBox>
                    <Button Grid.Column="1" Grid.Row="1" Width="50">...</Button>
                </StackPanel>
                <TextBox Grid.Column="2" Grid.Row="1" Margin="5 0 0 0"></TextBox>
                <Button Grid.Row="2"   HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="auto" Margin="5 17 0 0" Grid.ColumnSpan="3">Добавить организацию</Button>
            </Grid>
        </StackPanel>
        <Button Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="right" Height="30" Width="100" Margin="0 0 5 5">Сохранить</Button>
    </Grid>
</Window>
