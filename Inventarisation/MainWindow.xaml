<Window x:Class="Inventarisation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventarisation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Background="AliceBlue" >

        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Margin="20 0 20 0" Height="30" Width="auto" Name="Poisk"></Button>
        <TextBox Grid.Column="1" Margin="20 0 20 0" Height="30" Width="auto" Name="PoiskTextBox"></TextBox>
        <ComboBox Grid.Column="2" Margin="20 0 20 0" Height="30" Width="auto"></ComboBox>
        <Button Grid.Column="3" Margin="20 0 20 0" Height="30" Width="auto" Name="Glavnaya"></Button>
        <Button Grid.Column="4" Margin="20 0 20 0" Height="30" Width="auto" Name="Spisanie"></Button>
        <Button Grid.Column="5" Height="30" Width="auto" Name="Spravochnik" Margin="20 0 20 0"></Button>
        <Button Grid.Column="6" Height="30" Width="auto" Name="Вход" Margin="20 0 20 0"></Button>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="8">
            
        </StackPanel>
        <Frame x:Name="MainFrame" Navigated="MainFrame_Navigated" ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Grid.ColumnSpan="3" NavigationUIVisibility="Hidden" BorderBrush="Transparent" d:IsHidden="True"/>
    </Grid>
</Window>
