<Page x:Class="Inventarisation.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inventarisation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="AliceBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="LoginTextBox" Height="25" VerticalContentAlignment="Center"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="AuthPasswordBox" Height="25" VerticalContentAlignment="Center"></PasswordBox>
            <Button x:Name="LoginBtn" Margin="0 30 0 10" Height="30" FontSize="16" Click="LoginBtnClick">Войти</Button>
            <TextBlock x:Name="DontAuthTB" MouseLeftButtonDown="DontAuthTBMouseLeftButtonDown" FontSize="12" Cursor="Hand" HorizontalAlignment="Center" TextDecorations="Underline">Продолжить без авторизации</TextBlock>
        </StackPanel>
    </Grid>
</Page>
