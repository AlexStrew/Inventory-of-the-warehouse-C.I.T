<Page x:Class="Inventarisation.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inventarisation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40">
            </RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="30">
            <Button HorizontalAlignment="Right" Content="Добавить" Padding="10 0 10 0" Margin="0 0 10 0"></Button>
            <Button HorizontalAlignment="Right" Content="Удалить" Padding="10 0 10 0" Margin="10 0 15 0"></Button>
        </StackPanel>
        

        <!--сверху основные кнопки-->
        <Grid Grid.Row="1">
            <ScrollViewer >
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Инв. №" Width="*" Binding=""/>
                        <DataGridTextColumn Header="Наименование" Width="*"/>
                        <DataGridTextColumn Header="Привязка" Width="*"/>
                        <DataGridTextColumn Header="Движение" Width="*"/>
                        <DataGridTextColumn Header="Организация" Width="*"/>
                        <DataGridTextColumn Header="Номер заявки на оплату" Width="*"/>
                        <DataGridTextColumn Header="Комментарии" Width="*"/>
                        <DataGridTextColumn Header="Накладная" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
