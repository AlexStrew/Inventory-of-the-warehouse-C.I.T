<Page x:Class="Inventarisation.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inventarisation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45">
            </RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Height="30" Width="auto" Content="Добавить" Margin="20 0 20 0"></Button>
        <Button Grid.Column="1" Height="30" Width="auto" Content="Удалить" Margin="20 0 20 0"></Button>

        <!--сверху основные кнопки-->
        <Grid Grid.ColumnSpan="2" Grid.Row="1">
            <ScrollViewer >
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Инвентаризационный номер" Width="*"/>
                        <DataGridTextColumn Header="Наименование" Width="*"/>
                        <DataGridTextColumn Header="Привязка" Width="*"/>
                        <DataGridTextColumn Header="Движение" Width="*"/>
                        <DataGridTextColumn Header="Организация" Width="*"/>
                        <DataGridTextColumn Header="Номер заявки на оплату" Width="*"/>
                        <DataGridTextColumn Header="Комментарии" Width="*"/>
                        <DataGridTextColumn Header="Накладная" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
