<Page x:Class="Inventarisation.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inventarisation.Pages"
      mc:Ignorable="d" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40">
            </RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="30">
            <TextBlock Text="Поиск" VerticalAlignment="Center"></TextBlock>
            <TextBox x:Name="SearchTBox" TextChanged="SearchTBox_TextChanged" MinWidth="250" Margin="5 0 0 0" VerticalContentAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Companies}" Margin="5 0 0 0" Width="380" hc:InfoElement.TitleWidth="50" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="Фильтр"  Style="{StaticResource ComboBoxExtend}"/>
            <Button x:Name="AddButtonWindows" Click="AddButtonWindows_Click"  HorizontalAlignment="Right" Content="Добавить" Padding="10 0 10 0" Margin="0 0 10 0" ></Button>
            <Button HorizontalAlignment="Right" Content="Удалить" Padding="10 0 10 0" Margin="10 0 15 0"></Button>
        </StackPanel>

        <!--сверху основные кнопки-->
        <Grid Grid.Row="1">
            <ScrollViewer >
                <DataGrid x:Name="InventoryDataGrid" AutoGenerateColumns="False" IsReadOnly="True" VerticalScrollBarVisibility="Auto" SelectionMode="Single">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Инв. №" Width="*" x:Name="InvNumDGTBox" Binding="{Binding inv_num}"/>
                        <DataGridTextColumn Header="Наименование" Width="*" x:Name="NameInvDGTBox" Binding="{Binding Nomenclature.name_device}"/>
                        <DataGridTextColumn Header="Привязка" Width="*" x:Name="WorkPlaceDGTBox" Binding="{Binding Workplace.name_workplace}"/>
                        <DataGridTextColumn Header="Движение" Width="*" x:Name="MoveDGTBox" Binding="{Binding Movements.date_move}"/>
                        <DataGridTextColumn Header="Организация" Width="*" x:Name="CompanyDGTBox" Binding="{Binding Companies.company_name}"/>
                        <DataGridTextColumn Header="Номер заявки на оплату" Width="*" Binding="{Binding payment_num}"/>
                        <DataGridTextColumn Header="Комментарии" Width="*" Binding="{Binding comment}"/>
                        <DataGridTextColumn Header="Накладная" Width="*" Binding="{Binding invoice}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
